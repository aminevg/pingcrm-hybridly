	"remoteUser": "sail",
    "initializeCommand": "docker run --rm -u \"$(id -u):$(id -g)\" -v \"$(pwd):/var/www/html\" -w /var/www/html laravelsail/php81-composer:latest composer install --ignore-platform-reqs",
	"postCreateCommand": "chown -R 1000:1000 /var/www/html && curl -fsSL https://get.pnpm.io/install.sh | SHELL=bash sh -"
